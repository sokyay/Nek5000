      subroutine useric (ix,iy,iz,eg)
      implicit none
      include 'SIZE'
      include 'TOTAL'
      include 'NEKUSE'

      integer ix,iy,iz,e,eg

      e = gllel(eg)

      ux   = 0.0
      uy   = 0.0
      uz   = 1.0
      temp = 0.0

      if(ifield.eq.3) temp = 0.01
      if(ifield.eq.4) temp = 0.1

      return
